---
interface Props {
  title: string
  href: string
  target?: "_parent" | "_blank"
}

const { title, href, target } = Astro.props
---

<a
  type="button"
  class="text-gray-100 dark:text-gray-900 bg-gray-800 dark:bg-gray-100 dark:hover:bg-gray-200 hover:bg-gray-950 focus:ring-4 focus:outline-none focus:ring-gray-900 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 me-2 mb-2"
  href={href}
  target={target}
>
  {title}
</a>
