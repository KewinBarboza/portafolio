---
import LINKS_HOME from "@data/links_home.js";
import Link from "./Link.astro";
import Logo from "./Logo.astro";
import RedesSociales from "./../RedesSociales.astro";
import BtnDarkMode from "./BtnDarkMode.astro";
---

<nav
  id="navbar"
  class="bg-white/90 w-full z-10 w-100 items-center fixed top-0 dark:bg-transparent"
>
  <div class="container mx-auto h-auto flex justify-between py-3">
    <Logo />
    <ul class="md:flex justify-between items-center hidden">
      {
        LINKS_HOME.map(({ url, titulo }) => (
          <li>
            <Link url={url} titulo={titulo} />
          </li>
        ))
      }
    </ul>
    <div class="flex">
      <ul
        class="flex justify-between items-center dark:text-white text-slate-800"
      >
        <RedesSociales />
      </ul>
      <BtnDarkMode />
    </div>
  </div>
</nav>

<style>
  @keyframes add-shadow {
    to {
      box-shadow: 0 5px 50px -5px hsla(0, 0%, 100%, 0.1),
        0 0 0 1px hsla(0, 0%, 100%, 0.1);
      background: rgba(0, 0, 0, 0.3);
    }
  }

  #navbar {
    backdrop-filter: blur(10px);
    animation: add-shadow linear both;
    position: sticky;
    top: 0;
  }

  #navbar {
    animation-timeline: scroll();
    animation-range: 0 150px;
  }
</style>
