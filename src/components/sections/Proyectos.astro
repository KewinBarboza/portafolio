---
import PROYECTOS from "@data/proyectos.js"
import Icon from "./../Icons.astro"
---

<div class="grid gap-5 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-5 lg:mt-10">
  {
    PROYECTOS.map(
      ({
        nombre,
        imagen,
        descripcion,
        url,
        url_repositorio,
        lenguajes,
        isPrivate
      }) => (
        <article class="flex flex-col items-start border-neutral-200 dark:border-blue-600/15 bg-neutral-50 dark:dark:bg-slate-900/40 rounded-xl px-5 py-6 w-full">
          <img
            src={imagen}
            class="w-full aspect-[5/4] object-cover rounded-xl mb-5"
            loading="lazy"
            decoding="async"
            height="286"
            width="229"
            alt={`proyecto ${nombre}`}
          />
          <main class="flex-auto min-w-full">
            <h1 class="dark:text-white text-neutral-800 font-semibold">
              {nombre}
            </h1>
            <p class="max-w-sm dark:text-neutral-200 text-gray-700">
              {descripcion}
            </p>
          </main>
          <footer class="mt-7">
            <div class="flex flex-wrap align-baseline justify-items-start gap-2">
              {lenguajes.map((lenguaje) => (
                <span class="border border-neutral-200 dark:border-blue-600/30 font-semibold flex justify-between rounded-full py-1 px-3 text-xs gap-x-2 items-center leading-4 text-neutral-900 dark:text-white no-underline">
                  <Icon name={lenguaje} width="15" height="15" />
                  {lenguaje}
                </span>
              ))}
            </div>
            <div class="mb-2 flex gap-x-3 mt-4">
              <a
                href={url}
                target="_blank"
                class="group text-white bg-black px-4 py-1 rounded-lg text-[12px]"
              >
                <div class="flex items-center space-x-2 transition  hover:text-gray-400">
                  <p>Preview</p>
                  <svg
                    width="12"
                    height="12"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                    fill="none"
                    color="currentColor"
                    name="Deploy"
                    class="inline-block text-white transition-transform duration-300 group-hover:-translate-y-[1px] group-hover:translate-x-[1px]"
                  >
                    <path
                      d="M6 19L19 6m0 0v12.48M19 6H6.52"
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </div>
              </a>
              {!isPrivate && (
                <div class="flex items-center space-x-3">
                  <a
                    href={url_repositorio}
                    target="_blank"
                    title="Repositorio"
                    class="group text-white bg-black px-4 py-1 rounded-lg text-[12px]"
                  >
                    <div class="flex items-center space-x-2 transition  hover:text-gray-400">
                      <p>Code</p>
                      <svg
                        width="12"
                        height="12"
                        stroke-width="3"
                        viewBox="0 0 24 24"
                        fill="none"
                        color="currentColor"
                        class="inline-block text-white transition-transform duration-300 group-hover:-translate-y-[1px] group-hover:translate-x-[1px]"
                        name="Github"
                      >
                        <path
                          d="M16 22.027v-2.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7a5.44 5.44 0 00-1.5-3.75 5.07 5.07 0 00-.09-3.77s-1.18-.35-3.91 1.48a13.38 13.38 0 00-7 0c-2.73-1.83-3.91-1.48-3.91-1.48A5.07 5.07 0 005 5.797a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7a3.37 3.37 0 00-.94 2.58v2.87M9 20.027c-3 .973-5.5 0-7-3"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                    </div>
                  </a>
                </div>
              )}
            </div>
          </footer>
        </article>
      )
    )
  }
</div>
