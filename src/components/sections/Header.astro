---
import PERSONA from "@data/persona.js"
import ButtonSecondary from "../UI/ButtonSecondary.astro"
import ButtonPrimary from "../UI/ButtonPrimary.astro"
const { nombre, profesion, curriculum, foto } = PERSONA
---

<header id="inicio">
  <div class="text-center">
    <div
      class="absolute inset-x-0 bottom-1/2 top-0 dark:text-slate-600 text-slate-200 [mask-image:linear-gradient(white,transparent)]"
    >
      <svg aria-hidden="true" class="absolute inset-0 h-full w-full">
        <defs>
          <pattern
            id=":Rbm:"
            width="128"
            height="128"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
          >
            <path d="M0 128V.5H128" fill="none" stroke="currentColor"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#:Rbm:)"></rect>
      </svg>
    </div>
    <div class="relative max-w-6xl mx-auto">
      <div
        class="flex justify-between items-center flex-col-reverse md:flex-row"
      >
        <div class="text-start">
          <h2
            class="text-4xl md:text-3xl font-semibold font-sans mb-5 text-primary dark:text-secondary"
          >
            Hola, soy
          </h2>
          <h1
            class="font-extrabold animate-text-gradient font-sans mt-3 mb-2 text-transparent text-5xl md:text-6xl bg-clip-text bg-gradient-to-r from-accent via-accent to-accent/85"
          >
            {nombre}
          </h1>
          <p
            class="font-light text-2xl md:text-4xl font-sans text-primary dark:text-secondary"
          >
            {profesion}
          </p>

          <div class="mt-10 flex gap-4">
            <ButtonPrimary title="Proyectos" href="#proyectos" />
            <ButtonSecondary
              title="Descargar CV"
              href={curriculum}
              target="_blank"
            />
          </div>
        </div>
        <div class="p-4 md:p-0">
          <img
            src={foto}
            class="h-full w-full md:mx-auto lg:mx-0 md:w-96 rounded-xl mb-10 md:mb-0"
            height="460"
            width="281"
            alt="foto"
            title="kewin barboza"
          />
        </div>
      </div>
    </div>
  </div>
</header>
