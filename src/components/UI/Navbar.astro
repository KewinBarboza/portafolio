---
import LINKS_HOME from "@data/links_home.js";
import Link from "./Link.astro";
import Logo from "./Logo.astro";
import RedesSociales from "./../RedesSociales.astro";
import BtnDarkMode from "./BtnDarkMode.astro";
---

<nav
  class="bg-white/90 w-full z-10 w-100 items-center fixed top-0 backdrop-blur-xl dark:bg-slate-800/50"
>
  <div class="container mx-auto h-auto flex justify-between py-3">
    <Logo />
    <ul class="md:flex justify-between items-center hidden">
      {
        LINKS_HOME.map(({ url, titulo }) => (
          <li>
            <Link url={url} titulo={titulo} />
          </li>
        ))
      }
    </ul>
    <div class="flex">
      <ul
        class="flex justify-between items-center dark:text-white text-slate-800"
      >
        <RedesSociales />
      </ul>
      <BtnDarkMode />
    </div>
  </div>
</nav>
