---
import PERSONA from "@data/persona"
import Icons from "../Icons.astro"
import { IconName } from "@icons/mapIcons"

const { tecnologias } = PERSONA
---

<p
  class="uppercase text-center block mb-5 font-extrabold text-gray-600 dark:text-slate-200"
>
  Tecnolog√≠as
</p>
<section class="grid grid-cols-2 md:grid-cols-4 gap-5">
  {
    tecnologias.map((tecnologia) => (
      <span class="text-center flex flex-col overflow-hidden items-center p-4 rounded-lg dark:text-slate-300 text-slate-600 custom-shadow w-100 bg-transparent bg-gradient-to-tr from-secondary via-secondary dark:from-primary dark:via-primary dark:to-accent to-accent">
        <Icons name={tecnologia as IconName} dark />
        <small class="text-center">{tecnologia}</small>
      </span>
    ))
  }
</section>
