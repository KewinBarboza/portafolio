---
import EXPERIENCIA from "@data/experiencia.js";
import Icons from "./../Icons.astro";
---

<div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 mt-5 lg:mt-16">
  {
    EXPERIENCIA.map(({ nombre, icono, proyectos }) => (
      <div class="p-6 border-gray-100 border-2 mb-3 bg-white rounded-lg shadow-sm">
        <Icons name={icono} />
        <div class="">
          <p class="font-bold font-sans text-3xl text-gray-800">{nombre}</p>
          <ul class="mt-3">
            {proyectos.map(({ titulo, año }) => (
              <li class="text-gray-500 font-sans text-lg my-5">
                <span class="mt-1 text-sm text-blue-500 block font-bold">
                  {año}
                </span>
                {titulo}
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))
  }
</div>
