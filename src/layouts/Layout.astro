---
import PERSONA from "@data/persona.js"
import ViewTransitions from "astro/components/ViewTransitions.astro"
import Footer from "src/components/sections/Footer.astro"
import Navbar from "src/components/UI/Navbar.astro"

export interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<!doctype html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="google-site-verification"
      content="rnxUFqz2VUuGVXj1AfgABfHG1zgzQ3R5j1Jz1zaXtq0"
    />
    <meta name="description" content={PERSONA.sobre_mi} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="dark:bg-primary bg-secondary">
    <Navbar />
    <slot />

    <Footer />
  </body><script src="/darkMode.js" defer is:inline></script>
</html>

<style is:global>
  .custom-shadow {
    box-shadow:
      inset 0 0 0 1px hsla(0, 0%, 100%, 0.12),
      0 0 0 1px rgba(0, 0, 0, 0.04);
  }
</style>
