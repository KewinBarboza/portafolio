---
import Icons from "./../Icons.astro"
import { IconName } from "@icons/mapIcons"
import { Image } from "astro:assets"
import tcambio from "./../../../public/image/tcambio-t.png"
import ButtonPrimary from "./ButtonPrimary.astro"
import ButtonSecondary from "./ButtonSecondary.astro"

const { firstProyect } = Astro.props
---

<section
  class="flex flex-col-reverse md:flex-row justify-between h-auto rounded-xl my-6 custom-shadow bg-transparent bg-gradient-to-tr from-secondary via-secondary dark:from-primary dark:via-primary dark:to-accent to-accent"
>
  <div
    class="h-auto flex flex-col px-5 md:px-10 justify-center overflow-hidden dark:text-white text-primary"
  >
    <h4 class="text-2xl md:text-4xl lg:text-5xl font-bold md:mb-1 mb-2">
      {firstProyect.nombre}
    </h4>
    <p class="lg:text-lg md:text-base text-pretty">
      {firstProyect.descripcion}
    </p>
    <div class="flex flex-wrap md:mt-5 mt-1 gap-x-2">
      {
        firstProyect.lenguajes.map((lenguaje) => (
          <span class="flex font-normal text-sm md:text-base lg:text-lg gap-x-1 px-2 py-1 rounded-lg items-center leading-2 text-neutral-900 dark:text-white no-underline">
            <Icons name={lenguaje as IconName} />
            {lenguaje}
          </span>
        ))
      }
    </div>
    <div class="my-5">
      <ButtonPrimary
        title="Ver proyecto"
        href={firstProyect.url}
        target="_blank"
      />
      <ButtonSecondary title="Ver mas" href={`/project/${firstProyect.slug}`} />
    </div>
  </div>
  <Image
    class="lg:h-[18rem] lg:w-[18rem] md:h-[24rem] md:w-[24rem] h-[18rem] w-[18rem] object-cover mx-auto"
    src={tcambio}
    width={tcambio.width}
    height={tcambio.height}
    alt={`Foto del proyecto ${firstProyect.nombre}`}
  />
</section>
