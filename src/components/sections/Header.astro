---
import PERSONA from "@data/persona.js";
const { nombre, profesion, curriculum, foto } = PERSONA;
---

<header class="container mx-auto mt-28" id="inicio">
  <div class="order-last text-center">
    <div
      class="absolute inset-x-0 bottom-1/2 top-0 dark:text-slate-600 text-slate-200 [mask-image:linear-gradient(white,transparent)]"
    >
      <svg aria-hidden="true" class="absolute inset-0 h-full w-full">
        <defs>
          <pattern
            id=":Rbm:"
            width="128"
            height="128"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
          >
            <path d="M0 128V.5H128" fill="none" stroke="currentColor"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#:Rbm:)"></rect>
      </svg>
    </div>
    <div class="relative max-w-6xl pt-16 mx-auto">
      <div
        class="flex justify-between items-center flex-col-reverse md:flex-row"
      >
        <div class="text-start">
          <h2
            class="text-4xl md:text-3xl font-semibold font-sans mb-5 text-gray-800 dark:text-slate-50"
          >
            Hola, soy
          </h2>
          <h1
            class="font-extrabold font-sans mt-3 mb-2 text-transparent text-3xl md:text-7xl bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600"
          >
            {nombre}
          </h1>
          <p
            class="font-light text-2xl md:text-4xl font-sans text-gray-500 dark:text-slate-100"
          >
            {profesion}
          </p>

          <div class="mt-10">
            <a
              href={curriculum}
              target="_blank"
              class="text-white bg-sky-400 hover:bg-sky-800 focus:ring-4 focus:ring-sky-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-sky-500 dark:hover:bg-sky-600 focus:outline-none dark:focus:ring-sky-800"
            >
              Descargar CV
            </a>
            <a
              href="#proyectos"
              class="text-sky-700 hover:text-white border-2 border-sky-700 hover:bg-sky-800 focus:ring-4 focus:outline-none focus:ring-sky-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-sky-500 dark:text-sky-500 dark:hover:text-white dark:hover:bg-sky-500 dark:focus:ring-sky-800"
            >
              Proyectos
            </a>
          </div>
        </div>
        <div>
          <img
            src={foto}
            class="h-full w-full md:mx-auto lg:mx-0 md:w-96 rounded-[70px] mb-10 md:mb-0"
            height="460"
            width="281"
            alt="foto"
            loading="lazy"
            decoding="async"
            title="kewin barboza"
          />
        </div>
      </div>
    </div>
  </div>
</header>
