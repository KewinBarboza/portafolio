---
import PERSONA from "@/data/persona"
import Icons from "@/components/Icons.astro"
import { IconName } from "@/icons/mapIcons"

const { tecnologias } = PERSONA
---

<p
  class="uppercase text-center block mb-5 font-extrabold text-gray-600 dark:text-slate-200"
>
  Tecnolog√≠as
</p>
<article
  class="mt-8 mb-8 grid grid-cols-2 auto-rows-fr justify-center items-center content-center text-white gap-6 mx-auto sm:grid-cols-3 md:gap-x-16 lg:flex lg:flex-wrap lg:gap-x-20 xl:gap-x-28"
>
  {
    tecnologias.map((tecnologia) => (
      <div class="text-center flex flex-col overflow-hidden items-center p-4 rounded-xl dark:text-slate-300 text-slate-600">
        <Icons name={tecnologia as IconName} dark />
        <small class="text-center">{tecnologia}</small>
      </div>
    ))
  }
</article>
