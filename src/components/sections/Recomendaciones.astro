---
import RECOMENDACIONES from "@data/recomendaciones.js";
---

<div
  class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-5 lg:mt-16"
>
  {
    RECOMENDACIONES.map(({ nombre, empresa, descripcion, cargo }) => (
      <article class="rounded-lg border-2 border-gray-100 dark:border-slate-700 p-3 shadow-sm">
        <div class="mb-3">
          <p class="font-semibold font-sans text-gray-800 dark:text-gray-200 text-xl mb-1">
            {nombre}
          </p>
          <p class="font-normal font-sans text-gray-800 dark:text-gray-400 text-sm">
            {cargo}
          </p>
        </div>
        <p class="font-base text-base text-gray-500 dark:text-gray-200 mb-0">
          {descripcion}
        </p>
        <small class="font-light text-blue-400 text-sm mt-3 block">
          {empresa}
        </small>
      </article>
    ))
  }
</div>
